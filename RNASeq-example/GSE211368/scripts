module load nf-core
export PATH=$HOME/tools:$PATH
source ~/.bashrc
nextflow -version
cd /home/pshinde/repos/cmi-flu/transcriptomics/GSE207750


## Create Design file
echo "sample,fastq_1,fastq_2,strandedness" > design.csv
for f in fastq/*_1.fastq.gz; do
  base=$(basename $f _1.fastq.gz)
  echo "$base,fastq/${base}_1.fastq.gz,fastq/${base}_3.fastq.gz,unstranded" >> design.csv
done